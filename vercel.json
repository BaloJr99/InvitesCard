{
  "redirects": [
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "Accept-Language",
          "value": "(^es.*)"
        }
      ],
      "destination": "/es"
    },
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "Accept-Language",
          "value": "(^(?!es.*).*)"
        }
      ],
      "destination": "/en"
    },{
      "source": "/:path((?!es/).*)",
      "has": [
        {
          "type": "header",
          "key": "Accept-Language",
          "value": "(^es.*)"
        }
      ],
      "destination": "/es/:path*"
    }
  ],
  "rewrites": [
    { 
      "source": "/es/(.*)", 
      "destination": "/es/" 
    },
    { 
      "source": "/en/(.*)",
      "destination": "/en/" 
    }
  ]
}